<form method="POST" action="/vegetables">
    <!-- CSRF Token -->
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <!-- Vegetable Name -->
    <label for="name">Vegetable Name:</label>
    <input id="name" name="name" type="text" required>

    <!-- Vegetable Color -->
    <label for="color">Vegetable Color:</label>
    <input id="color" name="color" type="color" required>

    <!-- Submit Button -->
    <button type="submit">Add Vegetable</button>
</form>